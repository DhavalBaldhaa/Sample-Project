<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- please change color and fontfamily according to your requirement-->



    <style name="EditTextBoxTheme">
        <item name="android:background">@drawable/bg_edit_text_box</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="android:fontFamily">@font/poppins_medium</item>-->
        <item name="android:textSize">@dimen/text_size_x_small</item>
    </style>

    <style name="TextViewTheme">//for box title
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="android:fontFamily">@font/poppins_regular</item>-->
        <item name="android:textSize">@dimen/text_size_x_micro</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!--You can crate other style by using this style reference-->

</resources>